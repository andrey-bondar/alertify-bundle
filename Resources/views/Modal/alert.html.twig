    <strong>{{ title|default('')|raw|trans({}, translationDomain|default('alertify')) }}</strong>
    {{ body|default('')|raw|trans({}, translationDomain|default('alertify')) }}
    <button class="close" aria-hidden="true" data-dismiss="alert" type="button">
        {% if delete_icon is not defined or delete_icon == "" %}
